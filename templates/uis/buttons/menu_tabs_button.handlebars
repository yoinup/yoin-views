{{#with view}}

	{{#if isSingleButton}}
	
		{{view Yn.MenuTabButtonView class="single" 
			contentBinding="firstButton.name" 
			actionContentBinding="firstButton.action"  
			selectedBinding="selected" }}
	
	{{else}}
	
		{{view Yn.MenuTabButtonView class="left" 
			contentBinding="firstButton.name"
			actionContentBinding="firstButton.action"  
			selectedBinding="selected" }}

		{{#each middleButtons}}

			{{view Yn.MenuTabButtonView 
				contentBinding="name"
				actionContentBinding="action" 
				selectedBinding="view.selected" }}

		{{/each}}

		{{view Yn.MenuTabButtonView class="right" 
			contentBinding="lastButton.name" 
			actionContentBinding="lastButton.action" 
			selectedBinding="selected" }}
	
	{{/if}}
	
{{/with}}
	
	